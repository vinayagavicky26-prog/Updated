    <div class="letter" id="change">N</div>
    <div class="letter">E</div>
</div>

<button onclick="changeToV()">Click here for current update</button>

<script>
function changeToV() {
    let letter = document.getElementById("change");

    // Add animation effect
    letter.classList.add("transform");

    setTimeout(() => {
        letter.textContent = "V";  // Replace N â†’ V
    }, 300);   // slight delay so animation shows first
}
</script>

